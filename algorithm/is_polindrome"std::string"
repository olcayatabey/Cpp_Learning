#include <string>
#include <iostream>



bool is_polindrome(std::string& str)
{
    for (int i{}; i <( str.size()-1)/2; i++)
    {
        if (str[i] == str[(str.size() - 1) - i])
        {
            std::cout << " the string is polindrome " << str << "\n";
            return true;
        }

        else
        {
            std::cout << str << " is not a polindrome\n";
            return false;
        }
    }
}

int main() {

   std::string str;
   std::cout << "enter the string : ";
   std:: getline(std::cin, str);
   is_polindrome(str);
       
}
